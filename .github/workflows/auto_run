name: ANUBIS Auto Run Setup

on:
  push:
    branches:
      - main
  workflow_dispatch:

jobs:
  setup-and-run:
    runs-on: ubuntu-latest

    steps:
      - name: Checkout repository
        uses: actions/checkout@v3

      - name: Set up Python 3.12
        uses: actions/setup-python@v4
        with:
          python-version: '3.12'

      - name: Upgrade pip
        run: python -m pip install --upgrade pip

      - name: Install dependencies
        run: |
          if [ -f requirements.txt ]; then
            pip install -r requirements.txt
          else
            echo "No requirements.txt found, skipping install."
          fi

      - name: Ensure data and logs directories
        run: |
          mkdir -p data logs
          echo "Directories created."

      - name: Initialize empty learning record if missing
        run: |
          LEARNING_FILE="data/learning_record.csv"
          if [ ! -f "$LEARNING_FILE" ]; then
            echo "date,symbol,sim_price,real_price,discrepancy" > $LEARNING_FILE
            echo "Learning record initialized."
          fi

      - name: Run Anubis full day automation
        run: |
          if [ -f anubis_full_day_automation.py ]; then
            python anubis_full_day_automation.py
          else
            echo "No automation script found, skipping run."
          fi
